{{#partial "content"}}
    <section class="form " id="formSection">
        <div class="container p-5">
            <div class="row d-flex justify-content-center my-5">
                <div class="col-lg-10  px-5 pt-5 form-section">
                    <!-- feedback  -->
                    <div class="feedback text-center text-capitalize">

                    </div>
                    <h4 class="text-center"> ADD RANGER</h4>
                    <hr>
                    <form action="/rangers/new" method="post" id="form">
                        <div class="form-row">
                            <div class="col-lg-12 col-12">
                                <label for="name"> Name</label><br>
                                <input type="text" name="name" id="name" class="form-control my-3 p-4" required=""><br>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-12 col-12">
                                <label for="badge_number">Badge Number</label><br>
                                <input type="text" name="badge_number" id="badge_number" class="form-control my-3 p-4" required=""><br>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-12 col-12">

                                <label for="phone_number">Phone Number</label><br>
                                <input type="text" name="phone_number" id="phone_number" class="form-control my-3 p-4" required=""><br>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-12 col-12">
                                <label for="email">Email</label><br>
                                <input type="text" name="email" id="email" class="form-control my-3 p-4" required=""><br>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-12 mb-5">
                                <button type="submit" class="btn form-btn btn-lg">ADD RANGER</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>


{{/partial}}
{{> templates/layout}}