{{#partial "content"}}
    <section class="form " id="formSection">
        <div class="container p-5">
            <div class="row d-flex justify-content-center my-5">
                <div class="col-lg-10  px-5 pt-5 form-section">
                    <!-- feedback  -->
                    <div class="feedback text-center text-capitalize">

                    </div>
                    <h4 class="text-center"> ADD ENDANGERED ANIMAL</h4>
                    <hr>
                    <form action="/endangered/new" method="post" id="form">
                        <div class="form-row">
                            <div class="col-lg-12 col-12">
                                <label for="name"> Name</label><br>
                                <input type="text" name="name" id="name" class="form-control my-3 p-4" required=""><br>
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="col-lg-12 col-12">

                                <label  for="health">Health</label>
                                <select class="custom-select" id="health" name="health">
                                    <option selected></option>

                                    {{#each health}}
                                        <div class="{{@key}}">
                                            <option name="age" value={{this}}>{{this}}</option>

                                        </div>
                                    {{/each}}


                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-12 col-12">
                                <label for="age">Age</label><br>
                                <select class="custom-select " id="age" name="age">
                                    <option selected></option>

                                    {{#each age}}
                                        <div class="{{@key}}">
                                            <option name="age" value={{this}}>{{this}}</option>

                                        </div>
                                    {{/each}}


                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-lg-12 mb-5">
                                <button type="submit" class="btn form-btn btn-lg">SUBMIT</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>


{{/partial}}
{{> layout.hbs}}